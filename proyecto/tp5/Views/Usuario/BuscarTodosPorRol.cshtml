@model List<UsuarioViewModel>

@{
    ViewData["Title"]="Lista de Usuarios";
}
<h2>Lista de Usuarios</h2>

<a class="btn btn-primary btn-sm" href="/Usuario/AltaUsuario">Crear nuevo usuario</a>

<form class="col" asp-controller="Usuario" asp-action="BuscarTodosPorRol" method="get">
    <div class="row">
        <label class="col-auto" for="Rol">Buscar por Rol</label>
        <div class="col">
            <select class="form-select form-select-sm" name="Rol">           
            <option value="admin">Administrador</option>             
            <option value="cadete">Cadete</option>    
            <option value="sinFiltro">Mostrar Todos</option>
        </select>
        </select>
        </div>
        <div class="col-auto d-grid">
            <input class="btn btn-primary" type="submit" value="Buscar">
        </div>
    </div>
</form>

<section>
    <article>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Usuario</th>
                <th>Rol</th>
            </tr>
            </thead>

            <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Usuario</td>
                    <td>@usuario.Rol</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/Usuario/ModificarUsuario?id=@usuario.Id">Editar</a>
                        <a class="btn btn-danger btn-sm" href="/Usuario/BajaUsuario?id=@usuario.Id">Eliminar</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

    </article>
</section>